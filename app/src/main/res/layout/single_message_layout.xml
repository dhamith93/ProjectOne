<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sender_profile_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/profile_pic" />

    <TextView
        android:id="@+id/incoming_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/sender_profile_pic"
        android:background="@drawable/incoming_message_box"
        android:padding="15dp"
        android:text="TextView"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/sender_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/incoming_message_text"
        android:layout_alignTop="@+id/sender_profile_pic"
        android:text="TextView"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sent_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sender_name"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/sender_name"
        android:text="TextView" />

</RelativeLayout>